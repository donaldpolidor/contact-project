require('dotenv').config();
const express = require('express');
const cors = require('cors');
const mongoose = require('mongoose');
const contactRoutes = require('./routes/contact');
const { swaggerSpec, swaggerUi, swaggerUiOptions } = require('./swagger');

const app = express();
const PORT = process.env.PORT || 3000;

// Middleware
app.use(cors());
app.use(express.json());

// Serve Swagger documentation
app.use('/api-docs', swaggerUi.serve, swaggerUi.setup(swaggerSpec, swaggerUiOptions));

// Serve raw Swagger JSON
app.get('/swagger.json', (req, res) => {
  res.setHeader('Content-Type', 'application/json');
  res.send(swaggerSpec);
});

// Routes
app.use('/contacts', contactRoutes);

/**
 * @swagger
 * /:
 *   get:
 *     summary: Get API information
 *     description: Returns basic information about the Contacts API
 *     tags: [API Info]
 *     responses:
 *       200:
 *         description: API information
 *         content:
 *           application/json:
 *             schema:
 *               type: object
 *               properties:
 *                 message:
 *                   type: string
 *                   example: Contacts API
 *                 description:
 *                   type: string
 *                   example: API for managing contact information
 *                 version:
 *                   type: string
 *                   example: 1.0.0
 *                 endpoints:
 *                   type: object
 *                   properties:
 *                     getAllContacts:
 *                       type: string
 *                       example: GET /contacts
 *                     getContactById:
 *                       type: string
 *                       example: GET /contacts/:id
 *                     createContact:
 *                       type: string
 *                       example: POST /contacts
 *                     updateContact:
 *                       type: string
 *                       example: PUT /contacts/:id
 *                     deleteContact:
 *                       type: string
 *                       example: DELETE /contacts/:id
 *                     documentation:
 *                       type: string
 *                       example: GET /api-docs
 */
app.get('/', (req, res) => {
  res.json({
    message: 'Contacts API',
    description: 'API for managing contact information',
    version: '1.0.0',
    endpoints: {
      getAllContacts: 'GET /contacts',
      getContactById: 'GET /contacts/:id',
      createContact: 'POST /contacts',
      updateContact: 'PUT /contacts/:id',
      deleteContact: 'DELETE /contacts/:id',
      documentation: 'GET /api-docs',
      swaggerJson: 'GET /swagger.json'
    }
  });
});

/**
 * @swagger
 * /health:
 *   get:
 *     summary: Health check endpoint
 *     description: Returns the health status of the API and MongoDB connection
 *     tags: [API Info]
 *     responses:
 *       200:
 *         description: Health status
 *         content:
 *           application/json:
 *             schema:
 *               type: object
 *               properties:
 *                 status:
 *                   type: string
 *                   example: healthy
 *                 timestamp:
 *                   type: string
 *                   format: date-time
 *                 mongodb:
 *                   type: string
 *                   example: connected
 *                 uptime:
 *                   type: number
 *                   example: 3600
 */
app.get('/health', (req, res) => {
  const mongoStatus = mongoose.connection.readyState;
  const statusMessages = {
    0: 'disconnected',
    1: 'connected',
    2: 'connecting',
    3: 'disconnecting'
  };

  res.json({
    status: 'healthy',
    timestamp: new Date().toISOString(),
    mongodb: statusMessages[mongoStatus] || 'unknown',
    mongodbStatusCode: mongoStatus,
    uptime: process.uptime(),
    memory: process.memoryUsage()
  });
});

// MongoDB connection
const MONGODB_URI = process.env.MONGODB_URI || 'mongodb://localhost:27017/contactsDB';

mongoose.connect(MONGODB_URI)
  .then(() => {
    console.log('Connected to MongoDB');
    
    app.listen(PORT, () => {
      console.log(`Server running on port ${PORT}`);
      console.log(`Home: http://localhost:${PORT}`);
      console.log(`Swagger UI: http://localhost:${PORT}/api-docs`);
      console.log(`Swagger JSON: http://localhost:${PORT}/swagger.json`);
      console.log(`Contacts: http://localhost:${PORT}/contacts`);
      console.log(`Health: http://localhost:${PORT}/health`);
    });
  })
  .catch(err => {
    console.error('MongoDB connection error:', err);
  });